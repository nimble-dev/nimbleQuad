citHeader("In published work that uses nimbleQuad, please cite the R package for the specific version used, and also the Journal of Computational and Graphical Statistics article for `nimble`. To help us track usage to justify funding support, please include the DOI in the citation.")

title <- paste0('nimbleQuad: ', meta$Title)
year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

bibentry(                                                                          
    bibtype = "manual",
    title = title,
    author = c(
        person("Paul", "van Dam-Bates"),
        person("Wei", "Zhang"),
        person("Christopher", "Paciorek"),
        person("Daniel", "Turek")),
    year = year,
    version = meta$Version,
    note = note
)


bibentry(
    bibtype = "article",
    title = "Programming with models: writing statistical algorithms for general model structures with {NIMBLE}", 
    journal = "Journal of Computational and Graphical Statistics",
    volume = "26",
    issue = "2",
    pages = "403-413",
    year = "2017",
    author = c(person("Perry", "de Valpine"),
               person("Daniel", "Turek"),
               person("Christopher", "Paciorek"),
               person("Cliff", "Anderson-Bergman"),
               person("Duncan", "Temple Lang"),
               person("Ras", "Bodik")),
    doi = "10.1080/10618600.2016.1172487",
    textVersion = "de Valpine, P., D. Turek, C.J. Paciorek, C. Anderson-Bergman, D. Temple Lang, and R. Bodik. 2017. Programming with models: writing statistical algorithms for general model structures with NIMBLE. Journal of Computational and Graphical Statistics 26: 403-413. <DOI:10.1080/10618600.2016.1172487>."
)


